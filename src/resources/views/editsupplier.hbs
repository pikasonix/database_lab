<div class="p-3 bg-body rounded shadow-sm">
    {{#each supplierinfo}}
        <h3><strong>Edit supplier #{{this.id}}</strong></h3>
        {{!-- Input --}}
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class='mt-4'>
                    <form class="needs-validation" method='POST' action='/updatesupplier/{{this.id}}' novalidate>
                        <div class="row">
                            <div class='col-9'>
                                <div class="row">
                                    <div class='col-3 mb-3'>
                                        <label for='id-input' class='form-label'>ID:</label>
                                        <input
                                            type='text'
                                            name='id'
                                            class='form-control'
                                            id='id-input'
                                            value = {{this.id}}
                                            disabled
                                        />
                                    </div>
                                    <div class='col-3 mb-3'>
                                        <label for='name-input' class='form-label'>Nhà sản xuất:</label>
                                        <input
                                            type='text'
                                            name='name'
                                            class='form-control'
                                            id='name-input'
                                            value = '{{this.name}}'
                                            required
                                        />
                                        <div class="invalid-feedback">
                                            Hãy nhập tên nhà sản xuất
                                        </div>
                                    </div>
                                    <div class='col-6 mb-3'>
                                        <label for='address-input' class='form-label'>Địa chỉ:</label>
                                        <input
                                            type='text'
                                            name='address'
                                            class='form-control'
                                            id='address-input'
                                            value = '{{this.address}}'
                                        />
                                    </div>
                                    <div class='col-12 mb-3'>
                                        <label for='description-input' class='form-label'>Mô tả:</label>
                                        <textarea
                                            type='text'
                                            name='description'
                                            class='form-control'
                                            id='description-input'
                                            rows="3"
                                        >{{this.description}}</textarea>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type='submit' class='btn btn-primary'>Sửa dữ liệu</button>
                                </div>
                            </div>
                            <div class='col-3  pt-4'>
                                <div class="card border-warning mb-3" style="max-width: 18rem;">
                                    <h6 class="card-header text-warning">Chú ý</h6>
                                    <div class="card-body text-warning">
                                       <div class="card-text">
                                            Thông tin <strong>"Tên nhà sản xuất"</strong> không được để trống
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<script>
    (function() {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')

        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
