<strong>Delete Supplier</strong>

{{!-- Input --}}
<div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
    <div class="accordion-body">
        <div class='mt-4'>
            <form method='POST' action='/removesupplier/{{supplierinfo.[0].id}}'>
                <div class="row">
                    <div class='col-9'>
                        <div class="row">
                            <div class='col-3 mb-3'>
                                <label for='id-input' class='form-label'>ID:</label>
                                <input
                                    type='text'
                                    name='id'
                                    class='form-control'
                                    id='id-input'
                                    value = {{supplierinfo.[0].id}}
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='name-input' class='form-label'>Nhà sản xuất:</label>
                                <input
                                    type='text'
                                    name='name'
                                    class='form-control'
                                    id='name-input'
                                    value = '{{supplierinfo.[0].name}}'
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='address-input' class='form-label'>Địa chỉ:</label>
                                <input
                                    type='text'
                                    name='address'
                                    class='form-control'
                                    id='address-input'
                                    value = '{{supplierinfo.[0].address}}'
                                    disabled
                                />
                            </div>
                            <div class='col-12 mb-3'>
                                <label for='description-input' class='form-label'>Mô tả:</label>
                                <textarea
                                    type='text'
                                    name='description'
                                    class='form-control'
                                    id='description-input'
                                    rows="3"
                                    disabled
                                >{{supplierinfo.[0].description}}</textarea>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type='submit' class='btn btn-danger' {{#if resultSearch}}disabled{{/if}}>Xoá dữ liệu</button>
                        </div>
                    </div>
                    <div class='col-3  pt-4'>
                        <div class="card border-danger mb-3" style="max-width: 18rem;">
                            <h6 class="card-header text-danger">Cảnh báo</h6>
                            <div class="card-body text-danger">
                                <p class="card-text">Nhà sản xuất <strong>{{supplierinfo.[0].name}}</strong> không thể xoá nếu có sản phẩm thuộc nhà sản xuất này</p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{#if resultSearch}}
    <small>
    <div class="alert alert-danger mt-4" role="alert">   
        <div class="d-flex justify-content-between">
            <div class="align-self-center">Không thể xoá <strong>{{supplierinfo.[0].name}}</strong> do có sản phẩm thuộc nhà sản xuất này</div>
            <a class="btn btn-danger btn-sm" href="/searchsupplier" role="button">Quay lại</a>
        </div>
    </div>
    <table class='table table-hover text-center mt-2'>
        <thead class="text-center text-uppercase">
            <tr>
                {{#each resultSearch.[0]}}
                    <th>{{@key}}</th>
                {{/each}}
            </tr>
        </thead>

        <tbody>
            {{#each resultSearch}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.catalog}}</td>
                    <td>{{this.supplier_id}}</td>
                    <td>{{moment this.mgf format='DD/MM/YYYY'}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.discount}}</td>
                    <td>{{this.quantity}}</td>
                    <td>Mô tả</td>
                    <td><a href="{{this.image}}">Link</a></td>
                    <td>{{moment this.created_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                    <td>{{moment this.updated_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                </tr>
            {{/each}}
        </tbody>   
    </table>
    </small>                
{{else}}
    <p>Có thể xoá Nhà sản xuất {{this.name}}</p>
{{/if}}
