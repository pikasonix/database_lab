{{!-- Tìm kiếm theo mã --}}
<div class="p-3 bg-body rounded shadow-sm">
    <form method='POST' action=''>
        <div class="row align-items-center">
        <div class="col-4">
            <label for='search_input' class='form-label mt-2'>Nhập mã sản phẩm</label>
        </div>    
        <div class="col-6">
            <div class="d-flex">  
                <input type='text' name='q' class='form-control me-2' style='width: 50%' id='search_input' placeholder='MT1234'/>
                <button type='submit' class='btn btn-success'>Tìm kiếm</button> 
            </div> 
        </div>  
        <div class="col-3">

        </div> 
        </div>  
    </form>
</div>

<hr>
{{!-- Tìm kiếm nâng cao --}}
<div class="my-3 p-3 bg-body rounded shadow-sm">
    {{!-- Tìm kiếm chính --}}
    <div class="row">
        <div class="col">
            <label for='search_input' class='form-label active'>Tên sản phẩm</label>
            <input
                type='text'
                name='q'
                class='form-control'
                id='search_input'
                placeholder='VD: Máy tính'
            />
        </div>
        <div class="col-3">
            <label for='search_input' class='form-label active'>Nhà sản xuất</label>
            <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="VD: DELL">
            <datalist id="datalistOptions">
                <option value="DELL">
                <option value="HP">
                <option value="ASUS">
                <option value="Acer">
                <option value="Lenovo">
                <option value="Macbook">
            </datalist>
        </div>

        <div class="col-3">
            <label for='input-group' class='form-label active'>Năm sản xuất</label>
            <div class="input-group">   
                <select class="form-select">
                  <option selected>Vào</option>
                  <option value="1">Trước</option>
                  <option value="2">Sau</option>
                </select>
                <input type="text" class="form-control">
            </div>
        </div>
    </div>

<hr> 
    <div class="row">
        {{!-- Màu --}}
        <div class="col">   
            <label for='color-bar' class='form-label active'>Màu sắc</label>
            <div class="color-bar">
                <input type="radio" class="btn-check " name="options-outlined1" id="all-button" autocomplete="off"checked>
                <label class="btn btn-outline-light btn-sm" style="font-size: 12px;" for="all-button">All</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="green-button" autocomplete="off">
                <label class="btn btn-outline-success btn-sm" style="font-size: 12px;" for="green-button">Green</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="red-button" autocomplete="off">
                <label class="btn btn-outline-danger btn-sm" style="font-size: 12px;" for="red-button">Red</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="blue-button" autocomplete="off">
                <label class="btn btn-outline-primary btn-sm" style="font-size: 12px;" for="blue-button">Blue</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="yellow-button" autocomplete="off">
                <label class="btn btn-outline-warning btn-sm" style="font-size: 12px;" for="yellow-button">Yellow</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="white-button" autocomplete="off">
                <label class="btn btn-outline-light btn-sm" style="font-size: 12px;" for="white-button">White</label>

                <input type="radio" class="btn-check" name="options-outlined1" id="black-button" autocomplete="off">
                <label class="btn btn-outline-secondary btn-sm" style="font-size: 12px;" for="black-button">Black</label>
            </div>


        </div>
        {{!-- Giá thành --}}
        <div class="col">
            <label for='price-range' class='form-label active'>Giá thành</label>
            <div class="price-range">
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control" placeholder="Từ">
                    <span class="input-group-text">-</span>
                    <input type="text" class="form-control" placeholder="đến">
                    <span class="input-group-text">VND</span>
                </div>
            </div>
        </div>

<hr>

    {{!-- Buttons --}}
   <div class="text-center">
            <button type='submit' class='btn btn-success my-1' style="width: 50%">Tìm kiếm</button>
            <button type='submit' class='btn btn-outline-danger my-1' style="width: 50%">Tìm kiếm chính xác</button>
    </div>

</div>
