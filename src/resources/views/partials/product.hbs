{{!-- Add product --}}
<div class="bg-dark-subtle rounded shadow-sm">
    <div class="row">
        <div class="col">
            <label for='product-id-input' class='form-label active'>Mã sản phẩm</label>
            <input type='text' name='q' class='form-control' id='product-input' placeholder='VD: P123456'/>
        </div>

        <div class="col">
            <label for='product-name-input' class='form-label active'>Tên sản phẩm</label>
            <input type='text' name='q' class='form-control' id='product-name-input' placeholder='VD: Máy tính'/>
        </div>
        
        <div class="col-3">
            <label for='search-input' class='form-label active'>Nhà sản xuất</label>
            <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="VD: DELL">
            <datalist id="datalistOptions">
                <option value="DELL">
                <option value="HP">
                <option value="ASUS">
                <option value="Acer">
                <option value="Lenovo">
                <option value="Macbook">
            </datalist>
        </div>

        <div class="col-3">
            <label for='input-group' class='form-label active'>Năm sản xuất</label>
            <div class="input-group">   
                <select class="form-select">
                  <option selected>Vào</option>
                  <option value="1">Trước</option>
                  <option value="2">Sau</option>
                </select>
                <input type="text" class="form-control">
            </div>
        </div>
    </div>

    {{!-- Buttons --}}
   <div class="text-center pt-2">
            <button type='submit' class='btn btn-primary my-1' style="width: 20%">+ Thêm sản phẩm</button>
            <button type='submit' class='btn btn-outline-primary my-1' style="width: 20%">Lưu sản phẩm</button>
    </div>

</div>
