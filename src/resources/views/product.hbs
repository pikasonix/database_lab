<div class="accordion" id="product">
    {{!-- Search product --}}
    
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseZero" aria-expanded="true" aria-controls="collapseZero">
            <strong>Search product</strong>
            </button>
        </h2>
        <div id="collapseZero" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {{!-- Input --}}
                <form method='POST' action='/searchproduct'>
                    <div class="row">
                        <div class='col-9'>
                            <div class="row">
                                <div class='col-3 mb-3'>
                                    <label for='search_id-input' class='form-label'>ID:</label>
                                    <input
                                        type='text'
                                        name='search_id'
                                        class='form-control'
                                        id='search_id-input'
                                        placeholder='123'
                                    />
                                </div>
                                <div class='col-6 mb-3'>
                                    <label for='search_name-input' class='form-label'>Tên sản phẩm:</label>
                                    <input
                                        type='text'
                                        name='search_name'
                                        class='form-control'
                                        id='search_name-input'
                                        placeholder='Samsung S24'
                                    />
                                </div>
                                <div class="col-3">
                                    <label for='search_supplier-input' class='form-label active'>Nhà sản xuất:</label>
                                    <input name='search_supplier' class="form-control" list="datalistOptions" id="search_supplier-input" placeholder="Samsung">
                                    <datalist id="datalistOptions"></datalist>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='search_mgf-input' class='form-label'>Ngày sản xuất:</label>
                                    <input
                                        type='date'
                                        name='search_mgf'
                                        class='form-control'
                                        id='search_mgf-input'
                                        placeholder='2024-12-5'
                                    />
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='search_price-input' class='form-label'>Giá gốc:</label>
                                    <div class="input-group flex-nowrap">   
                                        <input
                                            type='number'
                                            name='search_price'
                                            class='form-control'
                                            id='search_price-input'
                                            placeholder='23000000'
                                        />
                                        <span class="input-group-text" id="addon-wrapping">đ</span>
                                    </div>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='search_discount-input' class='form-label'>Giảm giá:</label>
                                    <div class="input-group flex-nowrap">
                                        <input
                                            type='number'
                                            name='search_discount'
                                            class='form-control'
                                            id='search_discount-input'
                                            placeholder='10'
                                        />
                                        <span class="input-group-text" id="addon-wrapping">%</span>
                                    </div>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='search_quantity-input' class='form-label'>Số lượng:</label>
                                    <input
                                        type='number'
                                        name='search_quantity'
                                        class='form-control'
                                        id='search_quantity-input'
                                        placeholder='100'
                                    />
                                </div>
                            </div>
                            <div class="text-center">
                                <button type='submit' class='btn btn-primary'>Tìm kiếm</button>
                            </div>
                        </div>
                        <div class='col-3  pt-4'>
                            <div class="card border-warning mb-3" style="max-width: 18rem;">
                                <h6 class="card-header text-warning">Chú ý</h6>
                                <div class="card-body text-warning">
                                    <div class="card-text">
                                        <ul>
                                            <li>Tìm kiếm không phân biệt chữ hoa và thường</li>
                                            <li><strong>Chỉnh sửa</strong> và <strong>Xoá</strong> sản phẩm ở bảng dưới</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                {{!-- Table --}}
                {{#if resultSearch}}
                    <small>
                    <table class='table table-hover text-center'>
                        <thead class="text-center text-uppercase">
                            <tr>
                                {{#each resultSearch.[0]}}
                                    <th>{{@key}}</th>
                                {{/each}}
                                    <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each resultSearch}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.age}}</td>
                                    <td>{{this.gender}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{moment this.created_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                                    <td>{{moment this.updated_at format='DD/MM/YYYY HH:mm:ss'}}</td>

                                    <td>
                                        <div class="d-grid gap-2">
                                            <a href="/editproduct/{{this.id}}" type="button" class="btn btn-primary btn-sm">Edit</a> 
                                            <a href="/deleteproduct/{{this.id}}" type="button" class="btn btn-danger btn-sm">Delete</a> 
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    </small>                
                {{else}}
                    <p>No results found.</p>
                {{/if}}
            </div>
        </div>
    </div>

    {{!-- Add product --}}
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <strong>Add product</strong>
            </button>
        </h2>
        {{!-- Input --}}
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class='mt-4'>
                    <form method='POST' action='/addproduct'>
                    <div class="row">
                        <div class='col-9'>
                            <div class="row">
                                <div class='col-3 mb-3'>
                                    <label for='id-input' class='form-label'>ID:</label>
                                    <input
                                        type='text'
                                        name='id'
                                        class='form-control'
                                        id='id-input'
                                        disabled
                                    />
                                </div>
                                <div class='col-6 mb-3'>
                                    <label for='name-input' class='form-label'>Tên sản phẩm:</label>
                                    <input
                                        type='text'
                                        name='name'
                                        class='form-control'
                                        id='name-input'
                                        placeholder='Samsung S24'
                                    />
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='catalog-input' class='form-label'>Loại sản phẩm:</label>
                                    <input
                                        type='text'
                                        name='catalog'
                                        class='form-control'
                                        id='catalog-input'
                                        placeholder='SmartPhone'
                                    />
                                </div>
                                <div class="col-3">
                                    <label for='supplier-input' class='form-label active'>Nhà sản xuất:</label>
                                    <input name='supplier' class="form-control" list="datalistOptions" id="supplier-input" placeholder="Samsung">
                                    <datalist id="datalistOptions"></datalist>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='mgf-input' class='form-label'>Ngày sản xuất:</label>
                                    <input
                                        type='date'
                                        name='mgf'
                                        class='form-control'
                                        id='mgf-input'
                                        placeholder='2024-12-5'
                                    />
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='price-input' class='form-label'>Giá gốc:</label>
                                    <div class="input-group flex-nowrap">   
                                        <input
                                            type='number'
                                            name='price'
                                            class='form-control'
                                            id='price-input'
                                            placeholder='23000000'
                                        />
                                        <span class="input-group-text" id="addon-wrapping">đ</span>
                                    </div>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='discount-input' class='form-label'>Giảm giá:</label>
                                    <div class="input-group flex-nowrap">
                                        <input
                                            type='number'
                                            name='discount'
                                            class='form-control'
                                            id='discount-input'
                                            placeholder='10'
                                        />
                                        <span class="input-group-text" id="addon-wrapping">%</span>
                                    </div>
                                </div>
                                <div class='col-3 mb-3'>
                                    <label for='quantity-input' class='form-label'>Số lượng:</label>
                                    <input
                                        type='number'
                                        name='quantity'
                                        class='form-control'
                                        id='quantity-input'
                                        value='1'
                                    />
                                </div>
                                <div class='col-9 mb-3'>
                                    <label for='image-input' class='form-label'>Link hình ảnh sản phẩm:</label>
                                    <input
                                        type='text'
                                        name='image'
                                        class='form-control'
                                        id='image-input'
                                        placeholder='https://cdn.hoanghamobile.com/i/productlist'
                                    />
                                </div>
                                <div class='col-12 mb-3'>
                                    <label for='description-input' class='form-label'>Mô tả sản phẩm:</label>
                                    <textarea
                                        type='text'
                                        name='description'
                                        class='form-control'
                                        id='description-input'
                                        rows="3"
                                    ></textarea>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type='submit' class='btn btn-primary'>Thêm sản phẩm</button>
                            </div>
                        </div>
                        <div class='col-3  pt-4'>
                            <div class="card border-warning mb-3" style="max-width: 18rem;">
                                <h6 class="card-header text-warning">Chú ý</h6>
                                <div class="card-body text-warning">
                                    <div class="card-text">
                                        <ul>
                                            <li>Supplier nhập supplier_id đã có nha...chưa fix đc</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                </div>

            </div>
        </div>
    </div>

    {{!-- Table of product --}}
    <div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
        <strong>Product Info</strong>
        </button>
    </h2>
    {{!-- Table --}}
    <div id="collapseTwo" class="accordion-collapse show" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class='table-responsive mt-4'>
                <table class='table table-hover'>
                    <thead class="text-center">
                        <tr>
                            {{#each allProduct.[0]}}
                                <th>{{@key}}</th>
                            {{/each}}
                        </tr>
                    </thead>

                    <tbody>
                        {{#each allProduct}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.catalog}}</td>
                                    <td>{{this.supplier_id}}</td>
                                    <td>{{moment this.mgf format='DD/MM/YYYY'}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.discount}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>Mô tả</td>
                                    <td><a href="{{this.image}}">Link</a></td>
                                    <td>{{moment this.created_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                                    <td>{{moment this.updated_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                                </tr>
                            {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        fetch('/supplier')
            .then(response => response.json())
            .then(data => {
                const datalist = document.getElementById('datalistOptions');
                datalist.innerHTML = ''; // Xóa các option hiện tại
                data.forEach(supplier => {
                    const option = document.createElement('option');
                    option.value = supplier.name;
                    datalist.appendChild(option);
                });
            })
            .catch(error => console.error('Lỗi khi lấy danh sách nhà sản xuất:', error));
    });
</script>


