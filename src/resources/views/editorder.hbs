<div class="p-3 bg-body rounded shadow-sm">
    <h3><strong>Edit Order</strong></h3>
    {{#each orderinfo}}
    {{!-- Input --}}
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class='mt-4'>
                <form method='POST' action='/updateorder/{{this.id}}'>
                    <div class="row">
                        <div class='col-9'>
                            <div class="row">
                                <div class='col-2 mb-3'>
                                    <label for='id-input' class='form-label'>ID:</label>
                                    <input
                                        type='text'
                                        name='id'
                                        class='form-control'
                                        id='id-input'
                                        value = "{{this.id}}"
                                        disabled
                                    />
                                </div>
                                <div class='col-2 mb-3'>
                                    <label for='customer_id-input' class='form-label'>ID khách hàng:</label>
                                    <input
                                        type='text'
                                        name='customer_id'
                                        class='form-control'
                                        id='customer_id-input'
                                        value = {{this.customer_id}}
                                        disabled
                                    />
                                </div>
                                <div class='col-2 mb-3'>
                                    <label for='product_id-input' class='form-label'>ID sản phẩm:</label>
                                    <input
                                        type='text'
                                        name='product_id'
                                        class='form-control'
                                        id='product_id-input'
                                        value = {{this.product_id}}
                                        disabled
                                    />
                                </div>
                                <div class='col-2 mb-3'>
                                    <label for='quantity-input' class='form-label'>Số lượng:</label>
                                    <input
                                        type='text'
                                        name='quantity'
                                        class='form-control'
                                        id='quantity-input'
                                        value = {{this.quantity}}
                                        disabled
                                    />
                                </div>
                                <div class='col-4 mb-3'>
                                    <label for='amount-input' class='form-label'>Tổng tiền:</label>
                                    <input
                                        type='text'
                                        name='amount'
                                        class='form-control'
                                        id='amount-input'
                                        value = {{this.amount}}
                                        disabled
                                    />
                                </div>
                                <div class='col-4 mb-3'>
                                    <label for='status_paymentSelect' class='form-label'>Trạng thái thanh toán:</label>
                                    <select id="status_paymentSelect" name="status_payment" class="form-select" disabled>
                                        <option value = 0 {{#eq this.status_payment 0}}selected{{/eq}}>
                                            Chưa thanh toán
                                        </option>
                                        <option value=1 {{#eq this.status_payment 1}}selected{{/eq}}>
                                            Đã thanh toán
                                        </option>
                                        <option value=2 {{#eq this.status_payment 2}}selected{{/eq}}>
                                            Huỷ thanh toán
                                        </option>
                                    </select>
                                </div>
                                <div class='col-4 mb-3'>
                                    <label for='status_shipmentSelect' class='form-label'>Trạng thái giao hàng:</label>
                                    <select id="status_shipmentSelect" name="status_shipment" class="form-select" disabled>
                                        <option value =0 {{#eq this.status_shipment 0}}selected{{/eq}}>
                                            Đang xử lý
                                        </option>
                                        <option value=1 {{#eq this.status_shipment 1}}selected{{/eq}}>
                                            Đang giao hàng
                                        </option>
                                        <option value=2 {{#eq this.status_shipment 2}}selected{{/eq}}>
                                            Đã giao hàng
                                        </option>
                                        <option value=3 {{#eq this.status_shipment 3}}selected{{/eq}}>
                                            Huỷ giao hàng
                                        </option>
                                    </select>
                                </div>
                                <div class='col-12 mb-3'>
                                    <label for='address-input' class='form-label'>Địa chỉ:</label>
                                    <input
                                        type='text'
                                        name='address'
                                        class='form-control'
                                        id='address-input'
                                        value = '{{this.address}}'
                                    />
                                </div>
                            </div>
                            <div class="text-center">
                                <button type='submit' class='btn btn-primary'>Sửa địa chỉ</button>
                                <!-- Button trigger modal 1-->
                                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#ModalQuery1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286m1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94"/>
                                </svg>
                                </button>
                            </div>
                        </div>
                        <div class='col-3  pt-4'>
                            <div class="card border-warning mb-3" style="max-width: 18rem;">
                                <h6 class="card-header text-warning">Chú ý</h6>
                                <div class="card-body text-warning">
                                    <p class="card-text">Chỉ chỉnh sửa khi đơn hàng <strong>đang xử lý</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    {{/each}}
</div>

<!-- Modal 1-->
<div class="modal fade modal-xl" id="ModalQuery1" tabindex="-1" aria-labelledby="ModalQuery1Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="ModalQuery1Label">Edit Delivery address</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <pre><code class="postgresql" style="font-size: 18px;">
UPDATE orders SET address = $1 WHERE id = $2
        </code></pre>
      </div>
    </div>
  </div>
</div>