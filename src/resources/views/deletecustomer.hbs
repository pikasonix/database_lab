<strong>Delete Customer</strong>
{{#each customerinfo}}

{{!-- Input --}}
<div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
    <div class="accordion-body">
        <div class='mt-4'>
            <form method='POST' action='/removecustomer/{{this.id}}'>
                <div class="row">
                    <div class='col-9'>
                        <div class="row">
                            <div class='col-5 mb-3'>
                                <label for='name-input' class='form-label'>Tên:</label>
                                <input
                                    type='text'
                                    name='update_name'
                                    class='form-control'
                                    id='name-input'
                                    value = "{{this.name}}"
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='age-input' class='form-label'>Tuổi:</label>
                                <input
                                    type='text'
                                    name='update_age'
                                    class='form-control'
                                    id='age-input'
                                    value = {{this.age}}
                                    disabled
                                />
                            </div>
                            <div class='col-4 mb-3'>
                                <label for='genderSelect' class='form-label'>Giới tính:</label>
                                <select id="genderSelect" name="update_gender" value = {{this.gender}} class="form-select" disabled>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class='col-5 mb-3'>
                                <label for='email-input' class='form-label'>Email:</label>
                                <input
                                    type='text'
                                    name='update_email'
                                    class='form-control'
                                    id='email-input'
                                    value = {{this.email}}
                                    disabled
                                />
                            </div>
                            <div class='col-4 mb-3'>
                                <label for='address-input' class='form-label'>Address:</label>
                                <input
                                    type='text'
                                    name='update_address'
                                    class='form-control'
                                    id='address-input'
                                    value = "{{this.address}}"
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='phone-input' class='form-label'>Phone number:</label>
                                <input
                                    type='text'
                                    name='update_phone'
                                    class='form-control'
                                    id='phone-input'
                                    value = {{this.phone}}
                                    disabled
                                />
                            </div>
                        </div>
                        <div class="text-center">
                            <button type='submit' class='btn btn-primary'>Xoá người dùng</button>
                        </div>
                    </div>
                    <div class='col-3  pt-4'>
                        <div class="card border-danger mb-3" style="max-width: 18rem;">
                            <h6 class="card-header text-danger">Chú ý</h6>
                            <div class="card-body text-danger">
                                <p class="card-text">Khi nhấn <strong>Xoá người dùng</strong> thì người dùng có ID: {{this.id}} sẽ bị xoá</p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
{{/each}}