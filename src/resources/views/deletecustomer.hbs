<strong>Delete Customer</strong>

{{!-- Input --}}
<div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
    <div class="accordion-body">
        <div class='mt-4'>
            <form method='POST' action='/removecustomer/{{customerinfo.[0].id}}'>
                <div class="row">
                    <div class='col-9'>
                        <div class="row">
                            <div class='col-5 mb-3'>
                                <label for='name-input' class='form-label'>Tên:</label>
                                <input
                                    type='text'
                                    name='update_name'
                                    class='form-control'
                                    id='name-input'
                                    value = "{{customerinfo.[0].name}}"
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='age-input' class='form-label'>Tuổi:</label>
                                <input
                                    type='text'
                                    name='update_age'
                                    class='form-control'
                                    id='age-input'
                                    value = {{customerinfo.[0].age}}
                                    disabled
                                />
                            </div>
                            <div class='col-4 mb-3'>
                                <label for='genderSelect' class='form-label'>Giới tính:</label>
                                <select id="genderSelect" name="update_gender" value = {{customerinfo.[0].gender}} class="form-select" disabled>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                            <div class='col-5 mb-3'>
                                <label for='email-input' class='form-label'>Email:</label>
                                <input
                                    type='text'
                                    name='update_email'
                                    class='form-control'
                                    id='email-input'
                                    value = {{customerinfo.[0].email}}
                                    disabled
                                />
                            </div>
                            <div class='col-3 mb-3'>
                                <label for='phone-input' class='form-label'>Phone number:</label>
                                <input
                                    type='text'
                                    name='update_phone'
                                    class='form-control'
                                    id='phone-input'
                                    value = {{customerinfo.[0].phone}}
                                    disabled
                                />
                            </div>
                        </div>
                        <div class="text-center">
                            <button type='submit' class='btn btn-danger' {{#if resultSearch}}disabled{{/if}}>Xoá người dùng</button>
                        </div>
                    </div>
                    <div class='col-3  pt-4'>
                        <div class="card border-danger mb-3" style="max-width: 18rem;">
                            <h6 class="card-header text-danger">Chú ý</h6>
                            <div class="card-body text-danger">
                                <p class="card-text">Khi nhấn <strong>Xoá người dùng</strong> thì người dùng có ID: {{this.id}} sẽ bị xoá</p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

{{#if resultSearch}}
    <div class="alert alert-danger mt-4" role="alert">   
        <div class="d-flex justify-content-between">
            <div class="align-self-center">Không thể xoá khách hàng <strong>ID:{{customerinfo.[0].id}}</strong> do khách hàng đã</div>
            <a class="btn btn-danger btn-sm" href="/customer" role="button">Quay lại</a>
        </div>
    </div>
    <table class='table table-hover text-center align-middle'>
                        <thead class="text-center text-uppercase">
                            <tr>
                                {{#each resultSearch.[0]}}
                                    <th>{{@key}}</th>
                                {{/each}}
                                    <th>Action</th>
                            </tr>
                        </thead>

                        <tbody class="table-group-divider">
                            {{#each resultSearch}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.customer_id}}</td>
                                    <td>{{this.product_id}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>{{this.amount}}</td>
                                    <td>
                                        {{#eq this.status_payment 0}}
                                            <span class='badge bg-warning-subtle border border-warning-subtle text-warning-emphasis rounded-pill'>
                                                Chưa thanh toán
                                            </span>
                                        {{else}}
                                            {{#eq this.status_payment 1}}
                                                <span class='badge bg-success-subtle border border-success-subtle text-success-emphasis rounded-pill'>
                                                    Đã thanh toán
                                                </span>
                                            {{else}}
                                                <span class='badge bg-danger-subtle border border-danger-subtle text-danger-emphasis rounded-pill'>
                                                    Huỷ thanh toán
                                                </span>
                                            {{/eq}}
                                        {{/eq}}
                                    </td>
                                    <td>
                                        {{#eq this.status_shipment 0}}
                                            <span
                                                class='badge bg-secondary-subtle border border-secondary-subtle text-secondary-emphasis rounded-pill'
                                            >Đang xử lý</span>
                                        {{else}}
                                            {{#eq this.status_shipment 1}}
                                                <span
                                                    class='badge bg-info-subtle border border-info-subtle text-info-emphasis rounded-pill'
                                                >Đang giao hàng</span>
                                            {{else}}
                                                {{#eq this.status_shipment 2}}
                                                    <span
                                                        class='badge bg-success-subtle border border-success-subtle text-success-emphasis rounded-pill'
                                                    >Đã giao hàng</span>
                                                {{else}}
                                                    <span
                                                        class='badge bg-danger-subtle border border-danger-subtle text-danger-emphasis rounded-pill'
                                                    >Huỷ giao hàng</span>
                                                {{/eq}}
                                            {{/eq}}
                                        {{/eq}}
                                    </td>
                                    <td>{{moment this.created_at format='DD/MM/YYYY HH:mm:ss'}}</td>
                                    <td>
                                        <div class="d-grid gap-2">
                                            <a href="/editorder/{{this.id}}" type="button" class="btn btn-primary btn-sm">Edit</a> 
                                            <a href="/deleteorder/{{this.id}}" type="button" class="btn btn-danger btn-sm">Delete</a> 
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>   
                    </table>               
{{else}}
    <p>Có thể xoá Nhà sản xuất {{this.name}}</p>
{{/if}}

