<div class="accordion-body">
                        <div class='mt-4'>
                            <form method='POST' action=''>
                                <div class="row">
                                    <div class='col-9'>
                                        <div class="row">
                                            <div class='col-5 mb-3'>
                                                <label for='name-input' class='form-label'>Tên:</label>
                                                <input
                                                    type='text'
                                                    name='search_name'
                                                    class='form-control'
                                                    id='name-input'
                                                    placeholder='VD: Nguyễn Văn A'
                                                />
                                            </div>
                                            <div class='col-3 mb-3'>
                                                <label for='age-input' class='form-label'>Tuổi:</label>
                                                <input
                                                    type='text'
                                                    name='search_age'
                                                    class='form-control'
                                                    id='age-input'
                                                    placeholder='VD: 18'
                                                />
                                            </div>
                                            <div class='col-4 mb-3'>
                                                <label for='genderSelect' class='form-label'>Giới tính:</label>
                                                <select id="genderSelect" name="gender" class="form-select">
                                                    <option selected>Choose Gender</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                            <div class='col-5 mb-3'>
                                                <label for='email-input' class='form-label'>Email:</label>
                                                <input
                                                    type='text'
                                                    name='search_email'
                                                    class='form-control'
                                                    id='email-input'
                                                    placeholder='VD: customer@example.com'
                                                />
                                            </div>
                                            <div class='col-4 mb-3'>
                                                <label for='address-input' class='form-label'>Address:</label>
                                                <input
                                                    type='text'
                                                    name='search_address'
                                                    class='form-control'
                                                    id='address-input'
                                                    placeholder='VD: Hà Nội'
                                                />
                                            </div>
                                            <div class='col-3 mb-3'>
                                                <label for='phone-input' class='form-label'>Phone number:</label>
                                                <input
                                                    type='text'
                                                    name='search_phone'
                                                    class='form-control'
                                                    id='phone-input'
                                                    placeholder='VD: 0123456789'
                                                />
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type='submit' class='btn btn-primary'>Tìm kiếm</button>
                                        </div>
                                    </div>
                                    <div class='col-3  pt-4'>
                                        <div class="card border-warning mb-3" style="max-width: 18rem;">
                                            <h6 class="card-header text-warning">Chú ý</h6>
                                            <div class="card-body text-warning">
                                                <p class="card-text"><strong>Chỉnh sửa</strong> và <strong>Xoá</strong> thông tin khách hàng ở bảng dưới</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

</div>


